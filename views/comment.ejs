<% 
var getTimeStr = function (dateTime){
    if (!dateTime) return "未知";
    var date = new Date(dateTime);
    return date.getFullYear() + "-" + date.getMonth() + "-" + date.getDay()+" "+date.getHours()+":"+date.getMinutes()+":"+date.getMilliseconds();
};
if(post.comments){
    post.comments.forEach(function (comment, index) {
%>
        
        <div style="padding-left:4em">
        <p><img src="<%= comment.head %>" class="l_head" /><a href="<%= comment.website %>"><%= comment.name %></a>
        <span class="info"> 回复于 <%= getTimeStr(comment.time)%></span></p>
        <p><%- comment.content %></p>
        </div>
    <% });} %>
